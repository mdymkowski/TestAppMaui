<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TestAppMaui.MauiClient.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    Title="Zadania">
    <VerticalStackLayout Padding="16" Spacing="16">
        <Label Text="Zadania" FontAttributes="Bold" FontSize="24" />

        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
            <telerik:RadEntry
                Placeholder="Nazwa zadania"
                Text="{Binding NewTaskName}" />
            <telerik:RadButton
                Grid.Column="1"
                Text="WyÅ›lij"
                Command="{Binding SendCommand}" />
        </Grid>

        <Label Text="{Binding ErrorMessage}" TextColor="Red">
            <Label.Triggers>
                <DataTrigger TargetType="Label" Binding="{Binding ErrorMessage}" Value="{x:Null}">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </Label.Triggers>
        </Label>

        <telerik:RadDataGrid
            AutoGenerateColumns="False"
            ItemsSource="{Binding Tasks}">
            <telerik:RadDataGrid.Columns>
                <telerik:DataGridTextColumn HeaderText="Nazwa" PropertyName="Name" />
            </telerik:RadDataGrid.Columns>
        </telerik:RadDataGrid>
    </VerticalStackLayout>
</ContentPage>
